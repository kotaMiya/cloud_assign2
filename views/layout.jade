doctype 5
html(ng-app)
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous")
        script(src='/javascripts/angular.min.js')
        script(src='/javascripts/socket.io.js')
        script(src='/javascripts/main.js',type='text/javascript')
    body
        block content

        h1= title

        a(.text-center href='/auth/twitter') Twitter Login.
        .content(ng-controller='countTweets')
            h2.text-center total count: {{count}}
            h3.text-center
                span(style='color:blue')  Work: {{countWork}}
                span(style='color:green')  Study: {{countStudy}}
            div(ng-repeat='t in tweets')
                p(style='color:{{t.color}}') {{t.user.screen_name}}: {{t.text}}
